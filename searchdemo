let data = [];
const render = (data)=>{
  let itemsData = document.getElementById("items-data");
  itemsData.innerText=""
  for(let i=0;i<data.length;i++){
    const el = document.createElement("div");
    el.innerText=data[i]?.word;
    itemsData.append(el)
  }
}

async function getData(){
  
   const res = await  fetch("https://api.datamuse.com/sug?s=app");
   const Rdata =  await res.json();
   data= Rdata;
   render(Rdata);
}


function search(e){
    let filteredData =[];
    data.filter((item)=>{
      if(item.word.includes(e.target.value)){
         filteredData.push(item)
      }
     
    })
    
    render(filteredData)
}

function debounce (fn,delay=100){
  let timer;
  return function(...args){
    clearTimeout(timer)
    timer= setTimeout(()=>{
      fn.apply(this,args)
    },delay)
  }
}

const searchD =  debounce(search)
console.log("Search")
getData();















